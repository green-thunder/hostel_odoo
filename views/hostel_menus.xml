<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- main menu -->

    <menuitem 
        id="hostel_main_menu" 
        name="Hostel" 
        sequence="1"/>

    <!-- secondary menus -->

    <menuitem 
        id="hostel_type_menu" 
        name="Hostel" 
        action="hostel.hostel_action" 
        groups="hostel.group_hostel_manager" 
        parent="hostel_main_menu" 
        sequence="1"/>

    <menuitem
        id="hostel_room_menu"
        name="Rooms"
        action="hostel.hostel_room_action"
        groups="hostel.group_hostel_manager"
        parent="hostel_main_menu"
        sequence="2"/>
    
    <menuitem
        id="hostel_student_menu"
        name="Students"
        action="hostel.hostel_student_action"
        groups="hostel.group_hostel_manager"
        parent="hostel_main_menu"
        sequence="3"/>

    <menuitem
        id="configuration_menu"
        name="Configuration"
        groups="hostel.group_hostel_manager"
        parent="hostel_main_menu"
        sequence="4"/>

    <!-- sub menus -->

    <menuitem
        id="hostel_amenities_menu"
        name="Amenities"
        action="hostel.hostel_amenities_action"
        groups="hostel.group_hostel_manager"
        parent="configuration_menu"
        sequence="1"/>

    <menuitem
        id="hostel_categ_menu"
        name="Categories"
        action="hostel.hostel_category_action"
        groups="hostel.group_hostel_manager"
        parent="configuration_menu"
        sequence="2"/>


</odoo>
