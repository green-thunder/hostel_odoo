<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hostel_category_action" model="ir.actions.act_window">
        <field name="name">Hostel Categories</field>
        <field name="res_model">hostel.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hostel_category_tree" model="ir.ui.view">
        <field name="name">hostel.category.tree</field>
        <field name="model">hostel.category</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="hostel_category_form" model="ir.ui.view">
        <field name="name">hostel.category.form</field>
        <field name="model">hostel.category</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="child_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
