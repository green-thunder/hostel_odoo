<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hostel_action" model="ir.actions.act_window">
        <field name="name">Hostel</field>
        <field name="res_model">hostel.hostel</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class='oe_view_nocontent_create'>
                Create Hostel
            </p>
        </field>
    </record>

    <record id="hostel_tree" model="ir.ui.view">
        <field name="name">hostel.tree</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"></field>
                <field name="hostel_code"></field>
            </tree>
        </field>
    </record>

    <record id="hostel_form" model="ir.ui.view">
        <field name="name">hostel.form</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <form string="Hostel">
                <sheet>
                    <div class="oe_title">
                        <h3 class="">
                            <table class="">
                                <tr>
                                    <td style='padding-right:10px;'>
                                        <field name="name" required="1" placeholder="Name"></field>
                                    </td>
                                    <td style="padding-right:10px;">
                                        <field name="hostel_code" placeholder="Code"></field>
                                    </td>
                                </tr>
                            </table>
                        </h3>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <label for="street" string="Address"></label>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field 
                                    name="state_id" 
                                    class="o_address_state" 
                                    placeholder="State" 
                                    options='{"no_open":True}'/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field 
                                    name="country_id" 
                                    placeholder="Country" 
                                    class="o_address_country"
                                    options='{"no_open": True, "no_create": True}'
                                    />
                            </div>
                        </group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="email" widget="email" context="{'gravatar_image': True}"/>
                        </group>
                        <group>
                            <field name="hostel_floors" />
                            <field name="active" />
                            <field name="type" />
                            <field name="hostel_rating" />
                            <field name="other_info" />
                        </group>
                    </group>
                    <group>
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hostel_search" model="ir.ui.view">
        <field name="name">hostel.search</field>
        <field name="model">hostel.hostel</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name"></field>
                <field name="hostel_code"></field>
            </search>
        </field>
    </record>

</odoo>
